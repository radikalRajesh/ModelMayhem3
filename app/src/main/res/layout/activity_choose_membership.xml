<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material">

        <RelativeLayout
            android:id="@+id/back_relativeLayout"
            android:layout_width="52dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_back"
                android:tint="@color/signup_btn_color" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="31dp"
            android:layout_toEndOf="@+id/back_relativeLayout"
            android:text=" "
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="Upgrade Membership"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/basic_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expand_txt"
                    android:maxLines="5"
                    android:ellipsize="end"
                    app:animation_duration="1000"/>

                <Button
                android:id="@+id/basic_plus"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textStyle="bold"
                android:layout_below="@+id/basic_view"
                android:layout_alignParentEnd="true" />
                    <Button
                        android:layout_below="@+id/basic_plus"
                        android:id="@+id/btn_continue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/button_background"
                        android:text="Basic"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textColor="@color/white_color"></Button>


                </RelativeLayout>





            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"

                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <at.blogc.android.views.ExpandableTextView
                        android:id="@+id/premium_expnd_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expand_txt"
                        android:maxLines="5"
                        android:ellipsize="end"
                        app:animation_duration="1000"/>

                    <Button
                        android:id="@+id/primium_plus"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textStyle="bold"
                        android:layout_below="@+id/premium_expnd_view"
                        android:layout_alignParentEnd="true" />
                    <Button
                        android:layout_below="@+id/primium_plus"
                        android:id="@+id/btn_premium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/button_background"
                        android:text="Premium"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textColor="@color/white_color"></Button>


                </RelativeLayout>





            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"

                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <at.blogc.android.views.ExpandableTextView
                        android:id="@+id/vip_expnd_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expand_txt"
                        android:maxLines="5"
                        android:ellipsize="end"
                        app:animation_duration="1000"/>

                    <Button
                        android:id="@+id/vip_plus"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textStyle="bold"
                        android:layout_below="@+id/vip_expnd_view"
                        android:layout_alignParentEnd="true" />
                    <Button
                        android:layout_below="@+id/vip_plus"
                        android:id="@+id/btn_vip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/button_background"
                        android:text="Vip"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textColor="@color/white_color"></Button>


                </RelativeLayout>





            </android.support.v7.widget.CardView>



        </LinearLayout>





    </ScrollView>


</LinearLayout>
